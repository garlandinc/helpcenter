<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10sp"
        android:background="@drawable/border"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:layout_marginBottom="10sp"
        android:layout_height="wrap_content">
        <include layout="@layout/trim_spinners"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:id="@+id/id_association_name_text"
                    android:background="@drawable/border"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black" android:textSize="22sp"
                    android:id="@+id/id_association_cont_text"
                    android:background="@drawable/border"
                    android:padding="10sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black" android:textSize="22sp"
                    android:text="Messages from Your Association"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" android:textSize="22sp"
                    android:id="@+id/id_association_msg_text"
                    android:background="@drawable/border"
                    android:padding="10sp"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>